{
  "name": "tessellating-pbr-generator",
  "version": "1.0.0",
  "description": "Generate seamlessly tessellating PBR textures using generative AI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate": "ts-node src/cli.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "pbr",
    "texture",
    "tessellation",
    "ai",
    "generator",
    "seamless",
    "tileable"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "sharp": "^0.33.0",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "commander": "^11.1.0",
    "winston": "^3.11.0",
    "p-queue": "^7.4.1",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.10",
    "@types/lodash": "^4.14.202",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}